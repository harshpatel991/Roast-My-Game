commands:
   00letsencryptcerts:
      command: sudo yum install https://cdn.amazonlinux.com/patch/ca-certificates-update-2021-09-30/ca-certificates-2018.2.22-65.1.24.amzn1.noarch.rpm
   01updateComposer:
      command: export COMPOSER_HOME=/root && /usr/bin/composer.phar self-update

option_settings:
   - namespace: aws:elasticbeanstalk:application:environment
     option_name: COMPOSER_HOME
     value: /root

container_commands:
   01clearcompiled:
         command: "php artisan clear-compiled"
   02optimize:
      command: "/usr/bin/composer.phar dump-autoload --optimize"
